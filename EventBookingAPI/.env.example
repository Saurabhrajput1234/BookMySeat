# ===========================================
# EXAMPLE ENVIRONMENT VARIABLES
# Copy this file to .env and update values
# ===========================================

# Application Configuration
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:8080

# Production Database Configuration
POSTGRES_DB=eventbooking
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
CONNECTION_STRING=Host=postgres;Database=eventbooking;Username=postgres;Password=your_secure_password_here

# Development Database Configuration (for dev environment)
DEV_POSTGRES_DB=eventbooking_dev
DEV_POSTGRES_USER=devuser
DEV_POSTGRES_PASSWORD=devpass123
DEV_CONNECTION_STRING=Host=postgres-dev;Database=eventbooking_dev;Username=devuser;Password=devpass123

# JWT Configuration
JWT_KEY=your-super-secret-jwt-key-that-is-at-least-32-characters-long
JWT_ISSUER=EventBookingAPI
JWT_AUDIENCE=EventBookingAPIUsers
JWT_EXPIRES_IN_MINUTES=60

# Development JWT Key (for dev environment)
DEV_JWT_KEY=dev-jwt-key-that-is-at-least-32-characters-long-for-development

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Development SendGrid Email (for dev environment)
DEV_SENDGRID_FROM_EMAIL=dev@yourdomain.com

# Redis Configuration
REDIS_CONNECTION_STRING=redis:6379

